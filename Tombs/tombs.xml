  <property name="compiler.args.tombs" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="tombs.output.dir" value="${module.tombs.basedir}/bin"/>
  <property name="tombs.testoutput.dir" value="${module.tombs.basedir}/bin"/>
  
  <path id="tombs.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tombs.module.production.classpath">
    <path refid="${module.jdk.classpath.tombs}"/>
    <pathelement location="${basedir}/../../../Downloads/spigot (3).jar"/>
