  </path>
  
  <path id="tombs.runtime.production.module.classpath">
    <pathelement location="${tombs.output.dir}"/>
    <pathelement location="${basedir}/../../../Downloads/spigot (3).jar"/>
    <path refid="library.spigot.classpath"/>
  </path>
  
  <path id="tombs.module.classpath">
    <pathelement location="${tombs.output.dir}"/>
    <path refid="${module.jdk.classpath.tombs}"/>
    <pathelement location="${basedir}/../../../Downloads/spigot (3).jar"/>
    <path refid="library.spigot.classpath"/>
