    <pathelement location="${basedir}/../../../Downloads/spigot (3).jar"/>
    <path refid="library.spigot.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tombs">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tombs">
    <patternset refid="excluded.from.module.tombs"/>
  </patternset>
  
  <path id="tombs.module.sourcepath">
    <dirset dir="${module.tombs.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tombs" depends="compile.module.tombs.production,compile.module.tombs.tests" description="Compile module Tombs"/>
  
  <target name="compile.module.tombs.production" depends="register.custom.compilers" description="Compile module Tombs; production classes">
    <mkdir dir="${tombs.output.dir}"/>
    <javac2 destdir="${tombs.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tombs}/javac">
      <compilerarg line="${compiler.args.tombs}"/>
      <bootclasspath refid="tombs.module.bootclasspath"/>
      <classpath refid="tombs.module.production.classpath"/>
      <src refid="tombs.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tombs"/>
    </javac2>
    
    <copy todir="${tombs.output.dir}">
      <fileset dir="${module.tombs.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tombs.tests" depends="register.custom.compilers,compile.module.tombs.production" description="compile module Tombs; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tombs" description="cleanup module">
    <delete dir="${tombs.output.dir}"/>
    <delete dir="${tombs.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.tombs" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.tombs" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
